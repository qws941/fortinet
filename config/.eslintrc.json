{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jquery": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn",
    "no-undef": "error",
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-trailing-spaces": "error",
    "eol-last": "error",
    "comma-dangle": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"],
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "no-var": "error",
    "prefer-const": "warn",
    "arrow-spacing": "error",
    "no-duplicate-imports": "error"
  },
  "globals": {
    "Chart": "readonly",
    "ApexCharts": "readonly",
    "moment": "readonly",
    "bootstrap": "readonly",
    "cytoscape": "readonly",
    "THREE": "readonly",
    "ForceGraph3D": "readonly"
  },
  "ignorePatterns": [
    "src/static/vendor/**",
    "src/static/sw.js",
    "*.min.js",
    "node_modules/**",
    "dist/**",
    "build/**"
  ]
}